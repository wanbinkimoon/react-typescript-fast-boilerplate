{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "experimentalDecorators": false,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "pretty": true,
    "outDir": "dist",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "./src",
    "paths": {
      "app/*": ["./app/*"],
      "store/*": ["./app/store/*"],
      "views/*": ["./app/views/*"],
      "components/*": ["./app/components/*"],
      "data/*": ["./data/*"],
      "assets/*": ["./assets/*"],
      "beans/*": ["./beans/*"],
      "utils/*": ["./utils/*"],
      "constants/*": ["./constants/*"],
    }
  },
  "exclude": ["dist", "build", "node_modules", "internals"]
}
